                "verbose": {
                    "viewClass": "CheckBoxView",
                    "label": "Debug this step (log more data)"
                }
            },
            "metadata": {
                "in": "./lib/schemas/Tenants_List.in.json",
                "out": {
                    "type": "object"
                }
            }
        }
